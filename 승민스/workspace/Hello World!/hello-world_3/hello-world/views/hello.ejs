<!-- views/hello.ejs -->

<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hello World!</title>
    <link rel="stylesheet" href="/css/master.css">
  </head>
  <body>
    <h1>Hello
      <% if(name){ %>
        <span class="name"><%= name %>!</span>
      <% } else { %>
        <span class="stranger">Stranger!</span>
      <% } %>
    </h1>
  </body>
</html>

<!--ejs: html에 js 코드가 더해진 형태-->
<!--js 코드들은 <% %>안에 들어가야함, 변수 출력 시 <%=변수이름%>-->